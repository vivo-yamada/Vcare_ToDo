@model VcareTodo.Models.ViewModels.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>新規登録 - Vcare ToDo管理</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .register-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            padding: 40px;
            max-width: 500px;
            width: 100%;
        }
        .register-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .register-header h2 {
            color: #333;
            font-weight: bold;
        }
        .btn-register {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px;
            font-weight: bold;
        }
        .btn-register:hover {
            opacity: 0.9;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">
            <h2>新規登録</h2>
            <p class="text-muted">新しいアカウントを作成します</p>
        </div>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="UserCode" class="form-label"></label>
                <input asp-for="UserCode" class="form-control" placeholder="ユーザーIDを入力（英数字8文字以内）" />
                <span asp-validation-for="UserCode" class="text-danger"></span>
                <small class="form-text text-muted">※ユーザーIDは後から変更できません</small>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="お名前を入力" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="メールアドレスを入力（任意）" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="パスワードを入力（6文字以上）" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="パスワードを再入力" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-register w-100">新規登録</button>
        </form>

        <div class="mt-3 text-center">
            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary w-100">ログイン画面に戻る</a>
        </div>

        <div class="mt-3 text-center">
            <small class="text-muted">
                アカウントを作成することで、<br>
                Vcare ToDo管理システムの利用規約に同意したものとみなします
            </small>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>