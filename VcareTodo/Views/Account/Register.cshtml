@model VcareTodo.Models.ViewModels.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>新規登録 - Vcare ToDo管理</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #f8faff 0%, #e8f2ff 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .register-container {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 12px rgba(33, 150, 243, 0.1);
            padding: 40px;
            max-width: 500px;
            width: 100%;
        }
        .register-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .register-header h2 {
            color: #1976d2;
            font-weight: bold;
            padding-bottom: 10px;
            border-bottom: 3px solid #2196f3;
        }
        .form-label {
            color: #495057;
            font-weight: 500;
        }
        .form-control {
            border: 2px solid #ced4da;
            border-radius: 6px;
            padding: 12px 15px;
            font-size: 16px;
            transition: all 0.2s;
        }
        .form-control:focus {
            outline: none;
            border-color: #2196f3;
            box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.2);
            transform: translateY(-1px);
        }
        .btn-register {
            background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
            border: none;
            padding: 12px;
            font-weight: bold;
            transition: transform 0.2s;
        }
        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(33, 150, 243, 0.4);
        }
        .btn-outline-secondary {
            border: 2px solid #6c757d;
            color: #6c757d;
            transition: all 0.2s;
        }
        .btn-outline-secondary:hover {
            background: #6c757d;
            color: white;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">
            <h2>新規登録</h2>
            <p class="text-muted">新しいアカウントを作成します</p>
        </div>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="UserCode" class="form-label"></label>
                <input asp-for="UserCode" class="form-control" placeholder="ユーザーIDを入力（英数字8文字以内）" />
                <span asp-validation-for="UserCode" class="text-danger"></span>
                <small class="form-text text-muted">※ユーザーIDは後から変更できません</small>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="お名前を入力" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="メールアドレスを入力（任意）" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="パスワードを入力（6文字以上）" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="パスワードを再入力" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-register w-100">新規登録</button>
        </form>

        <div class="mt-3 text-center">
            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary w-100">ログイン画面に戻る</a>
        </div>

        <div class="mt-3 text-center">
            <small class="text-muted">
                アカウントを作成することで、<br>
                Vcare ToDo管理システムの利用規約に同意したものとみなします
            </small>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>