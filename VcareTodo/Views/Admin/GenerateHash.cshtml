@{
    ViewData["Title"] = "パスワードハッシュ生成";
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #f8faff 0%, #e8f2ff 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .container {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 12px rgba(33, 150, 243, 0.1);
            padding: 40px;
            margin-top: 40px;
            max-width: 800px;
        }
        h2 {
            color: #1976d2;
            font-weight: bold;
            padding-bottom: 10px;
            border-bottom: 3px solid #2196f3;
            margin-bottom: 30px;
        }
        h5 {
            color: #1976d2;
            font-weight: bold;
            margin-top: 30px;
            padding-left: 10px;
            border-left: 4px solid #2196f3;
        }
        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(33, 150, 243, 0.1);
            margin-bottom: 20px;
        }
        .card-title {
            color: #1976d2;
            font-weight: bold;
            font-size: 1.1rem;
        }
        .form-label {
            color: #495057;
            font-weight: 500;
            margin-bottom: 8px;
        }
        .form-control {
            border: 2px solid #ced4da;
            border-radius: 6px;
            padding: 12px 15px;
            font-size: 16px;
            transition: all 0.2s;
            background: #f8f9fa;
        }
        .form-control:focus {
            outline: none;
            border-color: #2196f3;
            box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.2);
        }
        textarea.form-control {
            font-family: 'Courier New', monospace;
            font-size: 14px;
        }
        .btn-primary {
            background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
            border: none;
            padding: 12px 24px;
            font-weight: bold;
            transition: transform 0.2s;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(33, 150, 243, 0.4);
        }
        .btn-outline-primary {
            border: 2px solid #2196f3;
            color: #2196f3;
            padding: 12px 24px;
            font-weight: bold;
            transition: all 0.2s;
        }
        .btn-outline-primary:hover {
            background: #2196f3;
            color: white;
        }
        .btn-outline-secondary {
            border: 2px solid #6c757d;
            color: #6c757d;
            padding: 6px 12px;
            font-size: 0.9rem;
            transition: all 0.2s;
        }
        .btn-outline-secondary:hover {
            background: #6c757d;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>パスワードハッシュ生成結果</h2>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">生成されたハッシュ値</h5>

                <div class="mb-3">
                    <label class="form-label">パスワード:</label>
                    <input type="text" class="form-control" value="@ViewBag.Password" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label">ソルト:</label>
                    <input type="text" class="form-control" value="@ViewBag.Salt" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label">ハッシュ:</label>
                    <input type="text" class="form-control" value="@ViewBag.Hash" readonly />
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">SQL文（更新用）</h5>
                <textarea class="form-control" rows="2" readonly>@ViewBag.SqlUpdate</textarea>
                <button class="btn btn-sm btn-outline-secondary mt-2" onclick="copyToClipboard('update')">コピー</button>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">SQL文（新規挿入用）</h5>
                <textarea class="form-control" rows="2" readonly>@ViewBag.SqlInsert</textarea>
                <button class="btn btn-sm btn-outline-secondary mt-2" onclick="copyToClipboard('insert')">コピー</button>
            </div>
        </div>

        <div class="mt-4">
            <a href="/Admin/CreateUser" class="btn btn-primary">ユーザー作成画面</a>
            <a href="/Account/Login" class="btn btn-outline-primary">ログイン画面へ</a>
        </div>
    </div>

    <script>
        function copyToClipboard(type) {
            let text;
            if (type === 'update') {
                text = '@ViewBag.SqlUpdate';
            } else {
                text = '@ViewBag.SqlInsert';
            }

            navigator.clipboard.writeText(text).then(function() {
                alert('SQLをクリップボードにコピーしました');
            });
        }
    </script>
</body>
</html>