@{
    ViewData["Title"] = "ユーザー認証データ作成";
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #f8faff 0%, #e8f2ff 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .container {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 12px rgba(33, 150, 243, 0.1);
            padding: 40px;
            margin-top: 40px;
            max-width: 600px;
        }
        h2 {
            color: #1976d2;
            font-weight: bold;
            padding-bottom: 10px;
            border-bottom: 3px solid #2196f3;
            margin-bottom: 30px;
        }
        h5 {
            color: #1976d2;
            font-weight: bold;
            margin-top: 30px;
            padding-left: 10px;
            border-left: 4px solid #2196f3;
        }
        .form-label {
            color: #495057;
            font-weight: 500;
        }
        .form-control {
            border: 2px solid #ced4da;
            border-radius: 6px;
            padding: 12px 15px;
            font-size: 16px;
            transition: all 0.2s;
        }
        .form-control:focus {
            outline: none;
            border-color: #2196f3;
            box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.2);
            transform: translateY(-1px);
        }
        .btn-primary {
            background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
            border: none;
            padding: 12px 24px;
            font-weight: bold;
            transition: transform 0.2s;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(33, 150, 243, 0.4);
        }
        .btn-secondary {
            background: linear-gradient(135deg, #42a5f5 0%, #1976d2 100%);
            border: none;
            padding: 12px 24px;
            font-weight: bold;
            transition: transform 0.2s;
        }
        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(66, 165, 245, 0.4);
        }
        .btn-outline-primary {
            border: 2px solid #2196f3;
            color: #2196f3;
            padding: 12px 24px;
            font-weight: bold;
            transition: all 0.2s;
        }
        .btn-outline-primary:hover {
            background: #2196f3;
            color: white;
        }
        .alert {
            border-radius: 6px;
            border: none;
        }
        .form-text {
            color: #666;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>ユーザー認証データ作成</h2>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert @(ViewBag.Success == true ? "alert-success" : "alert-danger")">
                @ViewBag.Message
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label for="userCode" class="form-label">ユーザーコード</label>
                <input type="text" class="form-control" id="userCode" name="userCode" required />
                <div class="form-text">T_社員テーブルに存在するコードを入力してください</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">パスワード</label>
                <input type="password" class="form-control" id="password" name="password" value="password123" required />
            </div>

            <button type="submit" class="btn btn-primary">認証データ作成</button>
            <a href="/Admin/GenerateHash" class="btn btn-secondary">ハッシュ値生成</a>
            <a href="/Account/Login" class="btn btn-outline-primary">ログイン画面へ</a>
        </form>

        <div class="mt-4">
            <h5>注意事項</h5>
            <ul>
                <li>ユーザーコードはT_社員テーブルに存在する必要があります</li>
                <li>既に認証データが存在するユーザーは作成できません</li>
                <li>作成後は該当のユーザーコードとパスワードでログインできます</li>
            </ul>
        </div>
    </div>
</body>
</html>